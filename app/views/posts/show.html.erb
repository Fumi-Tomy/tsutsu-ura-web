<p style="color: green"><%= notice %></p>

<%= render @post %>

<% if admin_signed_in? && current_admin == @post.admin %>
  <div>
    <%= link_to "Edit this post", edit_post_path(@post) %> |
    <%= link_to "Destroy this post", @post, class: "delete-post-link", data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>

<%= link_to "Back to posts", posts_path %>

<h2>Comments</h2>
<% if @post.comments.any? %>
  <div id="comments">
    <% @post.comments.each do |comment| %>
      <p><%= comment.body %></p>
      <% if admin_signed_in? %>
        <%= link_to "Delete Comment", @post, class: "delete-comment-link", data: { confirm: 'Are you sure?' } %>
      <% end %>
      <hr>
    <% end %>
  </div>
<% else %>
  <p>まだコメントはありません。</p>
<% end %>

<h3>Add a Comment</h3>
<%= form_with(model: [@post, @comment], local: true) do |form| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
      <ul>
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit "Create Comment" %>
  </div>
<% end %>
