<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1>ブログ記事一覧</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "記事を見る", post %>
    </p>
  <% end %>
</div>

<% if admin_signed_in? %>
  <%= link_to "新規作成", new_post_path %>
<% end %>