<%# --- お知らせ (notice) --- %>
<% if notice.present? %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<%# --- ページタイトル --- %>
<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">ブログ記事一覧</h1>

  <div class="d-flex align-items-center">
    <%# --- ここからフィルター部分を追加 --- %>
    <%# form_with を使ってGETリクエストを送信するフォームを作成 %>
    <%= form_with(url: posts_path, method: :get, class: "d-flex me-2") do |f| %>
      <%# collection_select でタグのドロップダウンを作成 %>
      <%= f.collection_select :tag_id, @tags, :id, :name,
            { prompt: "タグで絞り込む", selected: params[:tag_id] },
            { class: "form-select", onchange: "this.form.submit();" } %>
      
      <%# 絞り込みを解除するためのリンク %>
      <% if params[:tag_id].present? %>
        <%= link_to "クリア", posts_path, class: "btn btn-outline-secondary ms-2" %>
      <% end %>
    <% end %>
    <%# --- ここまでフィルター部分 --- %>

    <%# --- 管理者向け：新規作成ボタン --- %>
    <% if admin_signed_in? %>
      <%= link_to "新規作成", new_post_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%# --- 記事一覧コンテナ (Bootstrap Grid) --- %>
<% if @posts.any? %>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @posts.each do |post| %>
      <div class="col">
        <%# --- パーシャルを呼び出し --- %>
        <%= render post %>
      </div>
    <% end %>
  </div>
<% else %>
  <p>まだ投稿がありません。</p>
<% end %>