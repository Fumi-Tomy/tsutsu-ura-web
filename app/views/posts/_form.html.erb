<%= form_with(model: post, class: "needs-validation", novalidate: true) do |form| %>

  <%# --- バリデーションエラー表示 --- %>
  <% if post.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">入力内容に <%= post.errors.count %> 件のエラーがあります</h4>
      <ul class="mb-0">
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# --- フォーム全体を囲むカード --- %>
  <div class="card shadow-sm">
    <div class="card-body">

      <%# --- タイトル入力欄 --- %>
      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control form-control-lg", placeholder: "記事のタイトルを入力" %>
      </div>

      <%# --- 内容入力欄 (Action Text) --- %>
      <div class="mb-3">
        <%= form.label :body, "内容", class: "form-label" %>
        <div class="trix-content-wrapper">
          <%= form.rich_text_area :body %>
        </div>
      </div>

      <%# --- 都道府県タグ選択 (チェックボックス) --- %>
      <div class="mb-3">
        <%= form.label :tag_ids, "都道府県タグ", class: "form-label" %>
        <div class="border rounded p-3">
          <div class="checkbox-grid-vertical-flow">
            <%= form.collection_check_boxes :tag_ids, Tag.all.order(:id), :id, :name do |b| %>
              <div class="form-check">
                <%= b.check_box(class: "form-check-input") %>
                <%= b.label(class: "form-check-label") %>
              </div>
            <% end %>
          </div>
        </div>
        <%# 選択が0個の場合でもparamsに配列を渡すため %>
        <%= hidden_field_tag "post[tag_ids][]", "" %>
      </div>

      <%# --- 送信ボタン --- %>
      <div class="d-grid">
        <%= form.submit "保存する", class: "btn btn-primary btn-lg" %>
      </div>

    </div>
  </div>
<% end %>