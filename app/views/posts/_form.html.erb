<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :tag_ids, "都道府県タグ (最大3つまで選択)", style: "display: block" %>
    <div class="tag-checkbox-group" data-max-selection="3">
      <%# form.collection_check_boxes を使用してタグのチェックボックスを生成 %>
      <%= form.collection_check_boxes :tag_ids, Tag.all.order(:name), :id, :name do |b| %>
        <label>
          <%= b.check_box(class: "tag-checkbox") %>
          <%= b.text %>
        </label><br>
      <% end %>
      <%# 選択が0個の場合でもparamsに配列を渡すため %>
      <%= hidden_field_tag "post[tag_ids][]", "" %>
    </div>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
