<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

<% if post.tags.any? %>
  <p>
    <strong>Tags:</strong>
    <% post.tags.each do |tag| %>
      <%= link_to tag.name, tag_path(tag), class: "badge bg-info text-dark me-1" %> <%# 例: Bootstrapのバッジで表示 %>
    <% end %>
  </p>
<% else %>
  <p>タグは設定されていません。</p>
<% end %>

</div>
