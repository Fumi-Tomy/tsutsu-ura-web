<%= form_with(model: [post, comment], local: true) do |form| %>
  <%# --- バリデーションエラー表示 --- %>
  <% if comment.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力エラー:</strong>
      <ul>
        <% comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# --- ラジオネーム入力欄 --- %>
  <div class="mb-3">
    <%= form.label :name, "ラジオネーム", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "つつうらさん" %>
  </div>
  
  <%# --- コメント本文入力欄 --- %>
  <div class="mb-3">
    <%= form.label :body, "コメント", class: "form-label" %>
    <%= form.text_area :body, rows: 4, class: "form-control", placeholder: "コメントを入力してください" %>
  </div>

  <%# --- 送信ボタン --- %>
  <div class="actions text-end">
    <%= form.submit "コメントを投稿", class: "btn btn-primary" %>
  </div>
<% end %>